---
import Layout from "../../layouts/Layout.astro";

// Función para manejar el formulario y redirigir a cerrar caja (simulación)
async function handleFormSubmit(event) {
  event.preventDefault();
  // Simulación de redirección
  window.location.href = '/close-register'; // Cambia esta ruta si es diferente
}
---

<Layout title="Open Register">
  <div class="max-w-6xl mx-auto mt-12 p-8 bg-gray-800 rounded-lg shadow-md">
    <h1 class="text-3xl font-semibold text-white mb-6">Abrir Caja</h1>

    <form class="grid grid-cols-1 gap-6" onsubmit="handleFormSubmit(event)">
      <!-- Campo de Usuario -->
      <div>
        <label for="username" class="block text-sm font-medium text-white">Usuario <span class="text-red-500">*</span></label>
        <input type="text" id="username" name="username" class="mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md focus:ring focus:ring-blue-500" placeholder="Int(10)" required />
      </div>

      <!-- Campo de Contraseña -->
      <div>
        <label for="password" class="block text-sm font-medium text-white">Contraseña <span class="text-red-500">*</span></label>
        <input type="password" id="password" name="password" class="mt-1 block w-full px-3 py-2 bg-gray-700 text-white rounded-md focus:ring focus:ring-blue-500" placeholder="S(20)" required />
      </div>

      <!-- Botones de Aceptar y Cancelar -->
      <div class="flex justify-end space-x-4">
        <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded hover:bg-blue-700 focus:ring focus:ring-blue-500">
          Aceptar
        </button>
        <button type="button" onclick="window.location.href='/'" class="px-6 py-3 bg-gray-600 text-white rounded hover:bg-gray-700 focus:ring focus:ring-gray-500">
          Cancelar
        </button>
      </div>
    </form>
  </div>
</Layout>
