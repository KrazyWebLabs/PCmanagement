---
import SideBarLink from "./SideBarLink.astro";
import PcIcon from "@icons/PcIcon.astro";
import ReportIcon from "../icons/ReportIcon.astro";
import Divider from "../Divider.astro";
import DashBoardIcon from "@icons/DashBoardIcon.astro";
import StudentsIcon from "../icons/StudentsIcon.astro";

const session = Astro.cookies.get("userSes")?.json();
const name = session?.name + " "+ session?.lastName;
---

<aside
  class="flex flex-col w-64 h-auto p-4 border-r dark:border-gray-700 z-20 backdrop-blur-xl"
>
  <div class="flex flex-col justify-between flex-1">
    <nav>
      <SideBarLink href="/">
        <DashBoardIcon slot="icon" />
        Inicio
      </SideBarLink>

      <Divider />

      <SideBarLink href="/pc">
        <PcIcon slot="icon" />
        PC's
      </SideBarLink>
      <SideBarLink href="/student">
        <StudentsIcon slot="icon" />
        Alumnos
      </SideBarLink>

      <Divider />
    </nav>
